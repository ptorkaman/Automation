                                @*   <input asp-for="SignaturePath" type="file" accept=".jpg, .png, .tif, .tiff, .jpeg" style="visibility:hidden" />
                                <span id="spnsignatureuser" style="color:black;"></span>*@
                                <!--نام جدید تصویر-->
