                        </label>
                        <label class="col-md-3 col-xs-6">
                            <input asp-for="Gender" type="radio" name="r1" value="2" />
                            زن
                        </label>
                    </div>
                </div>

                <!--IsAdmin-->
                <div>
                    <label asp-for="IsAdmin" class="control-label col-md-3 col-xs-12" style="margin-top:10px;"></label>
                    <div class="col-md-9 col-xs-12" style="margin-top:10px;">
                        <label class="col-md-3 col-xs-6">
                            <input asp-for="IsAdmin" type="radio" name="IsAdmin" value="1" checked />
