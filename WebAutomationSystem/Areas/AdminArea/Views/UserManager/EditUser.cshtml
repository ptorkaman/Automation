                        </label>
                        <label class="col-md-3 col-xs-6">
                            <input asp-for="IsAdmin" type="radio" name="IsAdmin" value="2" />
                            کاربر
                        </label>
                    </div>
                </div>


            </div>

            <div class="col-md-6 col-xs-12">

                <!--Address-->
                <div>
                    <label asp-for="Address" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <textarea asp-for="Address" type="text" class="form-control custominput" placeholder="آدرس ..." autocomplete="off">
                        </textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>

                <!--userImage-->
                <div>
                    <label asp-for="ImagePath" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <div class="col-md-6">
                            <div class="form-horizontal">

                                @*<label for="ImagePath" class="btn" style="width:145px; height:30px; margin-bottom:5px; border-radius:3px;
                                        border:1px solid #cbcbcb;">
                                    انتخاب تصویر
                                    <i class="icon-file-picture"></i>
                                </label>*@
                                <input accept=".jpg, .png, .tif, .tiff, .jpeg" type='file' id="imgInp" asp-for="Files" />



                                @* <input asp-for="ImagePath" type="file" accept=".jpg, .png, .tif, .tiff, .jpeg" style="visibility:hidden" />
                                <span id="spnimageuser" style="color:black; font-size:12px;"></span>*@

                                <!--نام جدید تصویر-->
                                <input id="newImagePathName" name="newImagePathName" hidden />

                                @*<input type="button" value="آپلود و نمایش تصویر" id="btnupload" onclick="UploadImage()" class="btn"
                                style="height:30px; border-radius:3px; border:1px solid #cbcbcb; width:145px; margin-bottom:10px;" />*@
                            </div>
                        </div>

                        <div class="col-md-6">
                         
                            @if (Model.BlobDescription != null && Model.BlobDescription?.Blobs != null)
                            {
                                foreach (var file in Model.BlobDescription.Blobs)
                                {
                                    <div class="avatar-item">
                                        @{
                                            var data = "data:image/jpg;base64," + Convert.ToBase64String(file.BlobStream.File);
                                           
                                                <img src=@data height="110" width="130" id="blah" />
                                           
                                                <div class="avatar-badge" title="" data-toggle="tooltip" data-original-title="دانلود">
                                                    <a href='@Url.Action("Download", "File")?Id=@file.Id' target="_blank">
                                                        <i class="fas fa-cloud-download-alt"></i>
                                                    </a>
                                                </div>
                                                <div style="padding-top: 5px;position: absolute;">  @file.Title   </div>
                                                <div style="margin-right:80px" class="avatar-badge" title="" data-toggle="tooltip" data-original-title="حذف">
                                                    <a href="" data-confirm="حذف پیوست|آیا از حذف این پیوست اطمینان دارید؟"
                                               data-confirm-text-yes="حذف"
                                               data-confirm-text-cancel="انصراف"
                                               data-confirm-yes="confirmDelete(@file.Id)" id="delete_" @file.Id>
                                                        <i class="fas fa-trash-alt ico-red"></i>
                                                    </a>
                                                </div>
                                            <input asp-for="BlobDescriptionId" class="hidden" />
                                        }
                                    </div>
                                }
                            }
                            else
                            {
                                <img id="blah" src="~/upload/userimage/defaultuserImage1.jpg" alt="your image" height="110" width="130" style="height:130px; width:110px; margin:5px auto; border:1px solid #cbcbcb; background-size:100%; width:100%;" />
                            }
                           @* <img id="blah" src="~/upload/userimage/defaultuserImage1.jpg" alt="your image" height="110" width="130" style="height:130px; width:110px; margin:5px auto; border:1px solid #cbcbcb; background-size:100%; width:100%;" />*@

                            @*<img id="imguserimage" src="~/upload/userimage/defaultuserImage1.jpg"
                            style="height:130px; width:110px; margin:5px auto; border:1px solid #cbcbcb; background-size:100%; width:100%;" />*@

