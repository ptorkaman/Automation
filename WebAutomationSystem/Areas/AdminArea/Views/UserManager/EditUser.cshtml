                        </div>
                    </div>
                </div>

                <!--signature-->
                <div>
                    <label asp-for="SignaturePath" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <div class="col-md-6">
                            <div class="form-horizontal">

                               @* <label for="SignaturePath" class="btn" style="width:145px; height:30px; margin-bottom:5px; border-radius:3px;
                                        border:1px solid #cbcbcb;">
