                                @*<input type="button" value="آپلود و نمایش امضا" onclick="UploadSignature()" id="btnuploadsignature" class="btn"
                                style="height:30px; border-radius:3px; border:1px solid #cbcbcb; width:145px; margin-bottom:10px;" />*@
                            </div>
                        </div>

                        <div class="col-md-6">
                      
                            @if (Model.BlobDescriptionSignature != null && Model.BlobDescriptionSignature?.Blobs != null)
                            {
                                foreach (var file in Model.BlobDescriptionSignature.Blobs)
                                {
                                    <div class="avatar-item">
                                        @{
                                            var data = "data:image/jpg;base64," + Convert.ToBase64String(file.BlobStream.File);

                                            <img src=@data height="110" width="130" id="imgusersignature" />
                                           
                                                <div class="avatar-badge" title="" data-toggle="tooltip" data-original-title="دانلود">
                                                    <a href='@Url.Action("Download", "File")?Id=@file.Id' target="_blank">
                                                        <i class="fas fa-cloud-download-alt"></i>
                                                    </a>
                                                </div>
                                                <div style="padding-top: 5px;position: absolute;">  @file.Title   </div>
                                                <div style="margin-right:80px" class="avatar-badge" title="" data-toggle="tooltip" data-original-title="حذف">
                                                    <a href="" data-confirm="حذف پیوست|آیا از حذف این پیوست اطمینان دارید؟"
                                               data-confirm-text-yes="حذف"
                                               data-confirm-text-cancel="انصراف"
                                               data-confirm-yes="confirmDelete(@file.Id)" id="delete_" @file.Id>
                                                        <i class="fas fa-trash-alt ico-red"></i>
                                                    </a>
                                                </div>
                                            <input asp-for="BlobDescriptionSignatureId" class="hidden" />

                                        }
                                    </div>
                                }
                            }
                            else
                            {
                            <img id="imgusersignature" src="~/upload/signatureimage/signatureDefault.jpg" alt="your signature" height="110" width="130" style="height:130px; width:110px; margin:5px auto; border:1px solid #cbcbcb; background-size:100%; width:100%;" />
                            }
                            @*<img id="imgusersignature" src="~/upload/signatureimage/signatureDefault.jpg"
                            style="height:130px; width:110px; margin:5px auto; border:1px solid #cbcbcb; background-size:100%; width:100%;" />*@

                            <div id="divmessage1" class="text-center hidden"></div>
                        </div>
                    </div>
                </div>

                <div class="col-xs-12 form-group" style="margin-top:15px;">
                    <input type="submit" style="border:1px solid #cbcbcb; border-radius:3px;"
                           value="ویرایش اطلاعات" class="btn pull-right" />
                </div>
            </div>

        </form>
    </div>


</div>


@section AdminScripts{
    <script>
        imgInp.onchange = evt => {
            const [file] = imgInp.files
            if (file) {
                blah.src = URL.createObjectURL(file)
            }
        }

        SigInp.onchange = evt => {
            const [file] = SigInp.files
            if (file) {
                imgusersignature.src = URL.createObjectURL(file)
            }
        }

        $("#ImagePath").change(function () {
            var filename = this.files[0].name;
            $("#spnimageuser").html(filename);
        });
    </script>

    <script>
        $("#SignaturePath").change(function () {
            var filename = this.files[0].name;
            $("#spnsignatureuser").html(filename);
        });
    </script>


    <script>
        var UploadImage = function () {
            var data = new FormData;
            var file = $("#ImagePath").get(0);
            var files = file.files;

            for (var i = 0; i < files.length; i++) {
                data.append('filearray', files[i]);
            }
            data.append('path', "upload\\userimage\\");

            $.ajax({
                type: "post",
                url: '@Url.Action("UploadImageFile","UserManager", new { area = "AdminArea"})',
                data: data,
                contentType: false,
                processData: false

            }).done(function (result) {
                if (result.status == "success") {
                    $("#imguserimage").attr('src', "\\upload\\userimage\\" + result.imagename);
                    $("#divmessage").text("آپلود موفقیت آمیز بود.");
                    $("#divmessage").css("color", "green");
                    $("#divmessage").removeClass("hidden");


                    $("#newImagePathName").val(result.imagename);
                }

            }).fail(function (result) {
                if (result.status != "success") {
                    $("#divmessage").css("color", "red");
                    $("#divmessage").redmoveClass("hidden");
                    $("#divmessage").text("در حین آپلود اشکالی بوجود آمد.");
                }
            });

        }
    </script>

    <script>
        var UploadSignature = function () {
            var data = new FormData;
            var file = $("#SignaturePath").get(0);
            var files = file.files;

            for (var i = 0; i < files.length; i++) {
                data.append('filearray', files[i]);
            }

            data.append('path', "upload\\signatureimage\\");

            $.ajax({
                type: "post",
                url: '@Url.Action("UploadImageFile","UserManager", new { area = "AdminArea"})',
                data: data,
                contentType: false,
                processData: false

            }).done(function (result) {
                if (result.status == "success") {
                    $("#imgusersignature").attr('src', "\\upload\\signatureimage\\" + result.imagename);
                    $("#divmessage1").text("آپلود موفقیت آمیز بود.");
                    $("#divmessage1").css("color", "green");
                    $("#divmessage1").removeClass("hidden");


                    $("#newSignaturePathName").val(result.imagename);
                }

            }).fail(function (result) {
                if (result.status != "success") {
                    $("#divmessage1").css("color", "red");
                    $("#divmessage1").redmoveClass("hidden");
                    $("#divmessage1").text("در حین آپلود اشکالی بوجود آمد.");
                }
            });

        }
    </script>

    <script>
        $("#UserName").on('keyup', function (event) {
            var pattern = /^[a-zA-Z0-9]*$/;
            if (!pattern.test(event.key)) {
                $('#UserName').val("");
            }
        });

    </script>
}