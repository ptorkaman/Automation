@model WebAutomationSystem.DataModelLayer.ViewModels.RolePatternViewModel
@{
    ViewData["Title"] = "ثبت نقش کاربری";
}


<div class="content">

    <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 #cbcbcb; border-radius:px;">
        <span style="font-weight:bold;">
            <i class="icon-accessibility2"></i>
            فرم ثبت نقش کاربری
        </span>
    </div>


    <div class="panel panel-body container-fluid" style="border-radius:px; box-shadow:3px 1px 1px 0 #cbcbcb;
                background-color:#ebebeb;">

        <form asp-controller="RolePattern" asp-action="AddRolePattern" method="post">
            <div class="col-md-6 col-md-offset-3">
                <!--RolePatternName-->
                <div>
                    <label asp-for="RolePatternName" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="RolePatternName" type="text" class="form-control custominput" placeholder="عنوان نقش کاربری..." autocomplete="off" />
                        <span asp-validation-for="RolePatternName" class="text-danger"></span>
                    </div>
                </div>

                <!--RolePatternDescription-->
                <div>
                    <label asp-for="RolePatternDescription" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="RolePatternDescription" type="text" class="form-control custominput" placeholder="توضیحات..." autocomplete="off" />

                    </div>
                </div>

                <div class="col-xs-12 form-group" style="margin-top:15px;">
                    <input type="submit" 
                           value="ثبت نقش کاربری" class="btn btn-outline-primary pull-right" />
                </div>
            </div>
        </form>
    </div>

</div>