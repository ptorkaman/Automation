@model IEnumerable<WebAutomationSystem.DataModelLayer.Entities.ApplicationUsers>

@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<style>
    tr:hover td{
        background-color:#dcd6d6;
    }
</style>

<div class="content">

    <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 #cbcbcb; border-radius:px;">
        <span style="font-weight:bold;">
            <i class="glyphicon glyphicon-user"></i>
            لیست کاربران سامانه جهت انتساب شغل
        </span>
    </div>


    <div class="panel panel-body container-fluid" style="border-radius:px; box-shadow:3px 1px 1px 0 #cbcbcb; background-color:#ebebeb;">

        <span class="col-md-12 col-xs-12" style="text-align:center; margin-bottom:10px; font-size:14px; font-weight:bold;background-color: #D9F8C4;padding: 10px;box-shadow: 3px 1px 1px 0 grey;border-radius: 5px;">
            ردیف هایی که به رنگ <span style="color:#fa8a8a">قرمز</span> می باشند کاربران غیرفعال هستند.
        </span>

        
            <div class="table-responsive" style="border:1px solid #cbcbcb; border-radius:px; box-shadow:3px 3px 1px 0 #cbcbcb;">
                <table class="table table-bordered" style="background-color:white;">
                    <thead>
                        <tr style="font-size:14px; font-weight:bold; background-color:#cbcbcb;">
                            <td>ردیف</td>
                            <td>نام</td>
                            <td>نام خانوادگی</td>
                            <td>کدپرسنلی</td>
                            <td>نام کاربری</td>
                            <td>عملیات</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr style="font-size:13px; background-color:@(item.IsActive == 0 ? "#ffebfb" : "White");">
                                <td style="width:60px; text-align:center;">@counter</td>
                                <td style="text-align:right;">@item.FirstName</td>
                                <td>@item.Family</td>

                                <td>@item.PersonalCode</td>
                                <td>@item.UserName</td>
                                <td>
                                    <div class="row">
                                        <a asp-controller="UserJobManager" asp-action="JobhistoryList" asp-route-userId="@item.Id"
                                   style="height:30px; width:100px; font-size:10px; margin-bottom:3px;" title="تاریخچه مشاغل"
                                   class="btn btn-outline-primary">
                                            <i class="icon-office"></i>
                                            تاریخچه مشاغل
                                        </a>
                                    </div>

                                </td>
                            </tr>
                            counter++;
                        }

                    </tbody>
                </table>
            </div>
        

    </div>
</div>