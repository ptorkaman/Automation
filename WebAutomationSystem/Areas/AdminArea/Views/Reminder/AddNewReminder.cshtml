@model WebAutomationSystem.DataModelLayer.ViewModels.ReminderViewModel
@{
    ViewData["Title"] = "ثبت یادآوری";
}


<div class="content">

    <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 gray; border-radius:2px;">
        <span style="font-weight:bold;">
            <i class="icon-reminder"></i>
            فرم ثبت یادآوری
        </span>
    </div>


    <div class="panel panel-body container-fluid" style="border-radius:2px; box-shadow:3px 1px 1px 0 gray;
                background-color:#e6e2e2;">

        <form asp-controller="Reminder" asp-action="AddNewReminder" method="post">
            <div class="col-md-6 col-md-offset-3">
                <!--ReminderTtile-->
                <div>
                    <label asp-for="ReminderTtile" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <input asp-for="ReminderTtile" type="text" class="form-control custominput" placeholder="عنوان یادآوری..." autocomplete="off" />
                        <span asp-validation-for="ReminderTtile" class="text-danger"></span>
                    </div>
                </div>


                <!--ReminderContent-->
                <div>
                    <label asp-for="ReminderContent" class="control-label col-md-3 col-xs-12"></label>
                    <div class="col-md-9 col-xs-12">
                        <textarea asp-for="ReminderContent" type="text" class="form-control custominput" placeholder="متن یادآوری..." autocomplete="off"></textarea>
                        <span asp-validation-for="ReminderContent" class="text-danger"></span>
                    </div>
                </div>

                <!--ReminderDate-->
                <div style="margin-bottom:15px;">
                    <label asp-for="ReminderDate" class="control-label col-md-3 col-xs-12" for="BirthdayDate"></label>
                    <div class="input-group col-md-9 col-xs-12" style="padding-left:9px; padding-right:9px;">
                        <div class="input-group-addon"
                             style="border:1px solid gray; padding:6px">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </div>
                        <input asp-for="ReminderDate" id="ReminderDateShamsi" name="ReminderDateShamsi" type="text" class="form-control custominput" data-mddatetimepicker="true" data-placement="right" data-mdpersiandatetimepicker="" data-trigger="focus" data-enabletimepicker="false" data-mdpersiandatetimepickerselecteddatetime="{&quot;Year&quot;:1399,&quot;Month&quot;:1,&quot;Day&quot;:13,&quot;Hour&quot;:0,&quot;Minute&quot;:0,&quot;Second&quot;:0}" data-mdpersiandatetimepickershowing="true" aria-describedby="popover265350">

                    </div>
                    <span asp-validation-for="ReminderDate" style="margin-top:10px;" class="text-danger col-md-offset-3 col-md-9 col-xs-12"></span>
                </div>

                <div class="col-xs-12 form-group" style="margin-top:15px;">
                    <input type="submit" 
                           value="ثبت یادآوری" class="btn btn-outline-primary pull-right" />
                </div>
            </div>
        </form>
    </div>

</div>