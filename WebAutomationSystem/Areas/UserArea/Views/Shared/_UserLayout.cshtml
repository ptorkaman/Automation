    <!--JsTree Jquery-->
    <script src="~/lib/jstree/dist/jstree.js"></script>
    <!--sweet Alert-->
    <script src="~/lib/sweetalert/sweetalert2.min.js"></script>
    <!--LightBox Plugin-->
    <script src="~/lib/LightBox/js/modernizr.custom.js"></script>
    <script src="~/lib/LightBox/js/lightbox-2.6.min.js"></script>

    <!--SignalR Script-->
    <script src="~/lib/SignalR/dist/browser/signalr.min.js"></script>
    <script src="~/lib/SignalR/SignalRConnection.js"></script>

    <script>
        connection.on("RecievedLetter", function () {
             swal({
                    title: "دریافت نامه",
                    text: "شما یک نامه جدید دارید!",
                    type: 'success',
                    showCancelButton: false,
                    allowOutsideClick: false,
                    confirmButtonColor: "green",
                    confirmButtonText: "باشه"
                }).then(function () {
                    window.open("/UserArea/LetterList/Index");
                });
        });
        connection.start().catch(function (err) {
            return console.error(err.tostring());
        });
    </script>

    <!-- END - theme JS files -->
    @RenderSection("UserScripts", required: false)

</body>

