@model IEnumerable<WebAutomationSystem.DataModelLayer.Entities.Reminder>
@using WebAutomationSystem.CommonLayer.PublicClass

@{
    ViewData["Title"] = "Index";
    int counter = 1;
}

<style>
    tr:hover td {
        background-color: #dcd6d6;
    }
</style>

<div class="content">

    <div class="panel panel-heading" style="box-shadow:3px 1px 1px 0 gray; border-radius:2px;">
        <span style="font-weight:bold;">
            <i class="icon-reminder"></i>
            لیست یادآوری های شما
        </span>
    </div>

    <div style="margin-bottom:5px;">
        <a class="btn customGreen1" asp-controller="Reminder" asp-action="AddNewReminder">
            <i class="glyphicon glyphicon-plus"></i>
            ثبت یادآوری
        </a>
    </div>
    <div class="panel panel-body container-fluid" style="border-radius:2px; box-shadow:3px 1px 1px 0 gray; background-color:#e6e2e2;">

        <div class="table-responsive" style="border:1px solid gray; border-radius:2px; box-shadow:3px 3px 1px 0 gray;">
            <table class="table table-bordered" style="background-color:white;">
                <thead>
                    <tr style="font-size:14px; font-weight:bold; background-color:#c4bdbd;">
                        <td>ردیف</td>
                        <td>عنوان یادآوری</td>
                        <td>تاریخ ثبت یادآوری</td>
                        <td>تاریخ یادآوری</td>
                        <td>وضعیت</td>
                        <td>عملیات</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="font-size:13px; background-color:@(item.IsRead == false ? "#f8cece" : "White");">
                            <td style="width:60px; text-align:center;">@counter</td>
                            <td style="text-align:right;">@item.ReminderTtile</td>
                            <td>
                                @ConvertDateTime.ConvertMiladiToShamsi(item.ReminderCreateDate, "yyyy/MM/dd")
                            </td>

                            <td>
                                @ConvertDateTime.ConvertMiladiToShamsi(item.ReminderDate, "yyyy/MM/dd")
                            </td>

                            <td>
                                @if (item.IsRead == true)
                                {
                                    <span style="color:darkgreen;">خوانده شده</span>
                                }
                                else
                                {
                                    <span style="color:darkred;">خوانده نشده</span>
                                }
                            </td>
                            <td>
                                <div class="row">
                                    <a asp-controller="Reminder" asp-action="DeleteRemider" asp-route-ReminderID="@item.ReminderID"
                                       style="height:30px; width:100px; font-size:10px; margin-bottom:3px;"
                                       data-toggle="modal" data-target="#modal-action"
                                       class="btn customRed1">
                                        <i class="glyphicon glyphicon-remove"></i>
                                        حذف
                                    </a>
                                </div>

                            </td>
                        </tr>
                        counter++;
                    }

                </tbody>
            </table>
        </div>


    </div>
</div>


@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action", Size = BootstrapModel.ModalSize.Large })

@section UserScripts{
    <script src="~/js/modal/modal.js"></script>
}