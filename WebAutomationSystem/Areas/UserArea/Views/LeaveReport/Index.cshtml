<div class="content">
    <div class="panel panel-heading"
         style="box-shadow:3px 1px 1px 0 gray; border-radius:2px;">

        <span style="font-weight:bold;">
            <i class="icon-user-check"></i>
            فرم انتخاب کارکنان جهت گزارش مرخصی
        </span>

    </div>

    <div class="panel panel-body"
            style="border-radius:2px; box-shadow:3px 1px 1px 0 gray; background-color:#e6e2e2;">
        <form asp-controller="LeaveReport" asp-action="CreateLeaveReport" method="post">
            
            
            <div class="col-md-5">
                <div>
                    <label class="control-label col-md-3 col-xs-12 LabelClass">انتخاب کاربر :</label>
                    <div class="col-md-9 col-xs-12">
                        <input id="userfullname" name="userfullname" type="text" class="form-control custominput" placeholder="انتخاب کاربر ..." />
                    </div>
                </div>
            </div>
            <input id="userid" name="userid" type="text" class="hidden"/>

            <div class="col-md-5" style="text-align:center;">
                <label style="margin-bottom:5px;">از :</label>
                <input type="text" autocomplete="off" placeholder="تاریخ شروع مرخصی ..."
                       id="fromdate" name="fromdate"
                       style="border:1px solid gray; border-radius:2px; height:28px; padding-right:3px; margin-bottom:5px;"
                       data-mddatetimepicker="true"
                       data-placement="right" data-mdpersiandatetimepicker="" data-trigger="focus"
                       data-enabletimepicker="false"
                       data-mdpersiandatetimepickerselecteddatetime="{&quot;Year&quot;:1399,&quot;Month&quot;:1,&quot;Day&quot;:13,&quot;Hour&quot;:0,&quot;Minute&quot;:0,&quot;Second&quot;:0}"
                       data-mdpersiandatetimepickershowing="true" aria-describedby="popover265350">

                <label style="margin-bottom:5px;">تا :</label>
                <input type="text" autocomplete="off" placeholder="تاریخ پایان مرخصی..."
                       id="todate" name="todate"
                       style="border:1px solid gray; border-radius:2px; height:28px; padding-right:3px; margin-bottom:5px;"
                       data-mddatetimepicker="true"
                       data-placement="right" data-mdpersiandatetimepicker="" data-trigger="focus"
                       data-enabletimepicker="false"
                       data-mdpersiandatetimepickerselecteddatetime="{&quot;Year&quot;:1399,&quot;Month&quot;:1,&quot;Day&quot;:13,&quot;Hour&quot;:0,&quot;Minute&quot;:0,&quot;Second&quot;:0}"
                       data-mdpersiandatetimepickershowing="true" aria-describedby="popover265350">
            </div>


            <div class="col-md-2" style="text-align:right;">
                <select id="leavetype" name="leavetype">
                    <option value="-1">همه</option>
                    <option value="1">ساعتی</option>
                    <option value="2">استحقاقی</option>
                    <option value="3">استعلاجی</option>
                    <option value="4">بدون حقوق</option>
                </select>
            </div>

            <div class="col-xs-12 form-group" style="margin-top:15px;">
                <button formtarget="_blank" type="submit" style="border:1px solid gray; border-radius:2px;" class="btn pull-right">
                    تهیه گزارش
                </button>
            </div>
        </form>

    </div>
</div>

@section UserScripts{ 
    <script>
    $(document).ready(function () {
        $("#userfullname").autocomplete({
            source: function (request, response) {
                $.getJSON("/UserArea/LeaveReport/SearchInUser", {
                    term: $("#userfullname").val().trim()
                },
                    response)
            },
            select: function (e, u) {
                var uid = u.item;
                $("#userid").val(uid.id);
            },
            minLength:2,
        });
    });
    </script>
}